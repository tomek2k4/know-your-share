<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@android:color/holo_blue_dark"/>
            <size android:height="@dimen/home_button_picture_size"
                android:width="@dimen/home_button_picture_size"/>
        </shape>
    </item>
    <item android:top="20dp" android:bottom="20dp"
        android:right="20dp" android:left="20dp">
        <bitmap android:src="@drawable/ic_add" android:tint="@android:color/white" />
    </item>
</layer-list>