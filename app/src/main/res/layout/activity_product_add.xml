<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pum.tomasz.knowyourshare.ProductAddActivity"
    android:orientation="vertical"
    android:background="@color/mainColor">



    <EditText
        android:id="@+id/new_product_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="@string/new_product_hint"
        android:textColor="@color/tabDark"
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/new_buy_date_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:textColor="@color/tabDark"
        android:textSize="16dp"/>

        <ExpandableListView
        android:id="@+id/new_measure_type_expandablelistview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/new_value_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textColor="@color/tabDark"
        android:textSize="16dp"
        />


</LinearLayout>
